<Window x:Class="TimmyNotes.WpfUi.Views.AtomicClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TimmyNotes.WpfUi.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Atomic Clock"
        Width="840" Height="420"
        MinWidth="500" MinHeight="300"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        d:DataContext="{d:DesignInstance Type=vm:AtomicClockViewModel}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <SolidColorBrush x:Key="ClockBrush" Color="#00ACC1"/>
        <SolidColorBrush x:Key="SyncedBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="NotSyncedBrush" Color="#F44336"/>
    </Window.Resources>

    <Viewbox Stretch="Uniform" Margin="20">
        <Grid Width="800" Height="360">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Analog Clock -->
            <Canvas Grid.Column="0" Width="340" Height="340">
                <!-- Clock face circle -->
                <Ellipse Width="320" Height="320"
                         Canvas.Left="10" Canvas.Top="10"
                         Stroke="#00ACC1" StrokeThickness="2"
                         Fill="Transparent"/>

                <!-- Hour numbers -->
                <TextBlock Text="12" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="152" Canvas.Top="16"/>
                <TextBlock Text="1" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="222" Canvas.Top="38"/>
                <TextBlock Text="2" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="264" Canvas.Top="92"/>
                <TextBlock Text="3" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="280" Canvas.Top="155"/>
                <TextBlock Text="4" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="261" Canvas.Top="218"/>
                <TextBlock Text="5" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="218" Canvas.Top="265"/>
                <TextBlock Text="6" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="163" Canvas.Top="288"/>
                <TextBlock Text="7" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="103" Canvas.Top="265"/>
                <TextBlock Text="8" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="62" Canvas.Top="218"/>
                <TextBlock Text="9" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="42" Canvas.Top="155"/>
                <TextBlock Text="10" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="50" Canvas.Top="92"/>
                <TextBlock Text="11" FontSize="28" FontFamily="Segoe UI Semibold" Foreground="#00ACC1"
                           Canvas.Left="92" Canvas.Top="38"/>

                <!-- Minute tick marks (60 ticks, drawn via code-behind) -->
                <Canvas Name="TickCanvas" Width="340" Height="340"/>

                <!-- Hour hand -->
                <Line X1="0" Y1="0" X2="0" Y2="-80"
                      Stroke="#00ACC1" StrokeThickness="5"
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                      Canvas.Left="170" Canvas.Top="170">
                    <Line.RenderTransform>
                        <RotateTransform Angle="{Binding HourAngle}"/>
                    </Line.RenderTransform>
                </Line>

                <!-- Minute hand -->
                <Line X1="0" Y1="0" X2="0" Y2="-110"
                      Stroke="#00ACC1" StrokeThickness="3"
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                      Canvas.Left="170" Canvas.Top="170">
                    <Line.RenderTransform>
                        <RotateTransform Angle="{Binding MinuteAngle}"/>
                    </Line.RenderTransform>
                </Line>

                <!-- Second hand -->
                <Line X1="0" Y1="20" X2="0" Y2="-130"
                      Stroke="#00ACC1" StrokeThickness="1.5"
                      StrokeDashArray="3 2"
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                      Canvas.Left="170" Canvas.Top="170">
                    <Line.RenderTransform>
                        <RotateTransform Angle="{Binding SecondAngle}"/>
                    </Line.RenderTransform>
                </Line>

                <!-- Center dot -->
                <Ellipse Width="12" Height="12"
                         Canvas.Left="164" Canvas.Top="164"
                         Fill="#00ACC1"/>
            </Canvas>

            <!-- Digital Display -->
            <Grid Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sync indicator (top right) -->
                <Ellipse Grid.Row="0"
                         Width="16" Height="16"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                         Margin="0,0,10,10">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="{StaticResource NotSyncedBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSynced}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource SyncedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>

                <!-- Date -->
                <TextBlock Grid.Row="1"
                           Text="{Binding DateText}"
                           FontSize="42"
                           FontFamily="Segoe UI Semibold"
                           Foreground="#00ACC1"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <!-- Time -->
                <TextBlock Grid.Row="2"
                           Text="{Binding TimeText}"
                           FontSize="56"
                           FontFamily="Segoe UI Semibold"
                           Foreground="#00ACC1"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
