<Window x:Class="TimmyTools.WpfUi.Views.ManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimmyTools.WpfUi.Views"
        xmlns:vm="clr-namespace:TimmyTools.WpfUi.ViewModels"
        mc:Ignorable="d"
        Title="Timmy Tools"
        Width="600"
        Height="400"

        d:DataContext="{d:DesignInstance Type=vm:ManagementViewModel}">

    <Grid>

        <ListView x:Name="NotesListView"
                  Margin="5,5,5,5"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  SelectionMode="Extended"
                  ItemsSource="{Binding NotePreviews}">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Width="125"
                            Height="125"
                            Margin="5"
                            Padding="0,20,0,0"
                            Background="{Binding TitleBrush}"
                            BorderBrush="{Binding BorderBrush}"
                            BorderThickness="1">
                        <TextBlock Text="{Binding ContentPreview}"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Padding="5,2,5,2"
                                   Background="{Binding BackgroundBrush}"
                                   Foreground="{Binding TextBrush}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="IsSelected"
                            Value="{Binding IsSelected, Mode=TwoWay}" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ContextMenu>
                <ContextMenu DataContext="{Binding PlacementTarget.DataContext,
                                                   RelativeSource={RelativeSource Self}}">
                    <MenuItem Header="New note"
                              Command="{Binding NewNoteCommand}" />
                    <Separator />
                    <MenuItem Header="Open note(s)"
                              Command="{Binding OpenNotesCommand}" />
                    <MenuItem Header="Close note(s)"
                              Command="{Binding CloseNotesCommand}" />
                    <Separator />
                    <MenuItem Header="Delete note"
                              Command="{Binding DeleteNotesCommand}" />
                </ContextMenu>
            </ListView.ContextMenu>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

        </ListView>

    </Grid>

</Window>
